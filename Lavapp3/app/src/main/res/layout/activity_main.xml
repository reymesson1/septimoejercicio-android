<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
        />

        <!-- Primer nivel - Texto-->

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="horizontal"
            >
                <TextView
                        android:textColor="#91C0EA"
                        android:textSize="50dp"
                        android:text="LAVAPP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"/>

        </LinearLayout>

        <!--Segundo nivel - Cuadro de imagenes-->


        <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
            >

                <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                >
                    <TextView
                            android:id="@+id/addtowallet"
                            android:background="@drawable/ic_lavarandplanchar"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                    />



                </LinearLayout>

                <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                >
                    <TextView
                            android:id="@+id/addexpense"
                            android:background="@drawable/ic_solo_planchar"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                    />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
            >

                <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                >
                    <TextView
                            android:id="@+id/transaction_history"
                            android:background="@drawable/ic_historial"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                    />
                </LinearLayout>

                <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                >
                    <TextView
                            android:id="@+id/setting"
                            android:background="@drawable/ic_ubicacion"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--Tercer nivel - blank-->

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
        >
            <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="USD$0.00"
                    android:textAlignment="center"
                    android:textSize="35dp"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold"
            />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>